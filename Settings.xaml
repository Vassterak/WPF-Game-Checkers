<Window x:Class="WPF_Game_Checkers.Settings"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:WPF_Game_Checkers"
        mc:Ignorable="d"
        Title="Settings" Height="400" Width="350">
    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="*"/>
            <RowDefinition Height="*"/>
        </Grid.RowDefinitions>
        <StackPanel>
            <Label Content="Herní informace:" HorizontalAlignment="Center" VerticalAlignment="Top" FontSize="14" FontWeight="Bold"/>
            <TextBlock TextWrapping="WrapWithOverflow">
                Cílem ze zneškodnit protiháče přeskočením jeho figurky.
                Pokud se vám povede přeskákat přes všechny soupeřovo figurky, vyhráváte.
            </TextBlock>
        </StackPanel>
        <Label Content="Jazyk / Language:" HorizontalAlignment="Center" Grid.Row="1" VerticalAlignment="Top" FontSize="14" FontWeight="Bold"/>
        <Button x:Name="settingSaveButton" Content="Save" Grid.Row="1" VerticalAlignment="Bottom" Width="50" HorizontalAlignment="Center"  Margin="10"/>
    </Grid>
</Window>
